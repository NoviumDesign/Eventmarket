include includes/head
body(class="#{locals.pageClass}")
  include includes/nav
  include includes/messages
  .row
    include includes/sidenav

    .large-9.columns.medium-8.columns

      input(type="hidden", name="personId", value=locals.person.PersonID)
      dl.tabs(data-tab='')
        dd.active
          a(href='#panel2-1') Personliga data
        dd
          a(href='#panel2-2') Loginuppgifter
        //- dd
        //-   a(href='#panel2-3') Banner
