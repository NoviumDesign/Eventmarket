                .large-6.columns
                  label
                    | LastUpdated
                    input(type='hidden', name='LastUpdated', value=locals.login.LastUpdated)
                .large-6.columns
                  label
                    | LastOKLogin
                    input(type='hidden', name='LastOKLogin', value=locals.login.LastOKLogin)
                .large-6.columns
                  label
                    | NoOfFailedLogins
                    input(type='hidden', name='NoOfFailedLogins', value=locals.login.NoOfFailedLogins)
                .large-6.columns
                  label
                    | PersonID
                    input(type='hidden', name='PersonID', value=locals.login.PersonID)
                .large-6.columns
                  label
                    | ValidUntil
                    input(type='hidden', name='ValidUntil', value=locals.login.ValidUntil)
                .large-6.columns
                  label
                    | AutoLogin
                    input(type='hidden', name='AutoLogin', value=locals.login.AutoLogin)
                .large-6.columns
                  label
                    | CreatedBy
                    input(type='hidden', name='CreatedBy', value=locals.login.CreatedBy)
                .large-6.columns
                  label
                    | AccessMembership
                    input(type='hidden', name='AccessMembership', value=locals.login.AccessMembership)
                .large-6.columns
                  label
                    | PersonData
                    input(type='hidden', name='PersonData', value=locals.login.PersonData)

            input.button.small(type="submit", value="Spara loginuppgifter", name="editLogin")  
